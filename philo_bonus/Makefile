# Компилятор и флаги
CC = gcc
CFLAGS = -Wall -Wextra -Werror -pthread

# Имя исполняемого файла
NAME = philo_bonus

# Все .c файлы в директории
SRCS = $(wildcard *.c)

# Все объектные файлы (замена .c на .o)
OBJS = $(SRCS:.c=.o)

# Правило по умолчанию: собирает исполняемый файл
all: $(NAME)

# Компиляция объекта из .c
%.o: %.c
	$(CC) $(CFLAGS) -c $< -o $@

# Линковка объектов в исполняемый файл
$(NAME): $(OBJS)
	$(CC) $(CFLAGS) $(OBJS) -o $(NAME)

# Удаление объектных файлов
clean:
	rm -f $(OBJS)

# Полная очистка: объектные файлы + исполняемый файл
fclean: clean
	rm -f $(NAME)

# Пересборка (удаление + сборка)
re: fclean all

.PHONY: all clean fclean re
